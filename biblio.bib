@inproceedings{monno_icip_2015,
  author =       {Yusuke Monno and Daisuke Kiku and Masayuki Tanaka and and Masatoshi Okutomi},
  title =        {Adaptive Residual Interpolation for Color Image Demosaicking},
  booktitle =    {Proceedings of the IEEE International Conference on Image Processing (ICIP'15)},
  year =         {2015},
  day =          {27-30},
  month =        sep,
  address =      {Québec City, Canada},
  url =          {http://www.ok.ctrl.titech.ac.jp/res/DM/RI.html},
